<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <div>
      <h1 class="font-bold text-4xl">Schemas</h1>
      <h2 class="font-semibold text-2xl">(<%= @schema_count %> total)</h2>
    </div>
    <%= link_to 'New Schema', new_schema_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="schemas" class="min-w-full">
    <%== pagy_nav @pagy %>
    <%= render partial: "list_item", collection: @schemas, as: :schema %>
    <%== pagy_nav @pagy %>
  </div>
</div>
