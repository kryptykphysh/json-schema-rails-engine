<% frame_id = dom_id(form.object, "#{attribute}_field_frame") %>
<%= turbo_frame_tag frame_id, class: "contents" do %>
  <%= yield %>
  <%= form.submit "Save", class: "rounded-lg py-2 px-3 bg-blue-600 text-white inline text-sm font-normal cursor-pointer" %>
  <%= link_to "Cancel", form.object, class: "ml-2 rounded-lg py-2 px-3 bg-gray-100 inline text-sm font-normal" %>
<% end %>
